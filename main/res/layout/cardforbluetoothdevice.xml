<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@color/Scree1_Dark"
    android:foreground="?selectableItemBackground"

    android:layout_margin="5dp"
    android:id="@+id/cardForBluetoothScan"
    app:contentPadding="2dp"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="376dp"
            android:layout_height="78dp"
            android:padding="12dp">
           <!-- <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/initial"
                android:src="@drawable/ic_bluetooth_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />-->

            <com.github.ivbaranov.mli.MaterialLetterIcon
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/initial"
                android:layout_alignParentLeft="true"
                android:elevation="4dp"
                app:mli_shape_type="circle"
                app:mli_letter_size="26"
                app:mli_initials_number="1"
                app:mli_letter_color="@android:color/white"
                app:mli_initials="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deviceMAC"
                android:textSize="14sp"
                android:elevation="2dp"
                android:layout_marginLeft="1dp"
                android:fontFamily="casual"
                android:textColor="@color/Scree1_Light"
                android:text="Mac"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/initial"
                android:layout_alignStart="@+id/deviceName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:elevation="2dp"
                android:layout_marginLeft="1dp"
                android:fontFamily="casual"
                android:textColor="@color/Scree1"
                android:id="@+id/deviceName"
                android:text="Item Name"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/initial"
                android:layout_marginStart="45dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
