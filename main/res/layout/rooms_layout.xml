<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardRoom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="1dp"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        app:cardBackgroundColor="@color/Scree1"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/field5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/field3"
                android:layout_alignBottom="@+id/field3"
                android:layout_alignEnd="@+id/field4"
                android:text="FIELD5" />

            <TextView
                android:id="@+id/field4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="FIELD4"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_toStartOf="@+id/textView5" />

            <TextView
                android:id="@+id/field2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="FIELD2"
                android:layout_alignBaseline="@+id/field4"
                android:layout_alignBottom="@+id/field4"
                android:layout_toStartOf="@+id/field4"
                android:layout_marginEnd="46dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:layout_centerVertical="true"
                android:text="surface :"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/field3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/field2"
                android:layout_centerVertical="true"
                android:text="FIELD3"
                android:textAlignment="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/field1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cardRoom"
                android:layout_alignTop="@+id/cardRoom"
                android:layout_marginStart="13dp"
                android:layout_marginTop="12dp"
                android:fontFamily="monospace"
                android:text="FIELD1"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â°C"
                android:textStyle="bold"
                android:layout_marginEnd="33dp"
                android:layout_alignBottom="@+id/field1"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView4"
                android:layout_centerVertical="true"
                android:text="%     "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="volume :"
                android:textStyle="italic"
                android:layout_marginEnd="11dp"
                android:layout_alignBaseline="@+id/field2"
                android:layout_alignBottom="@+id/field2"
                android:layout_toStartOf="@+id/field2" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
